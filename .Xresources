!! Cursor size
Xcursor.size: 16

!! DPI
Xft.dpi: 96 

!! Font cofig
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!! URxvt Configuration
URxvt.font: xft:Fantasque Sans Mono:style=Regular:size=14, xft:Font\ Awesome\ 5\ Free:size=15:minspace=False
URxvt.scrollBar: false
URxvt.letterSpace: 0

